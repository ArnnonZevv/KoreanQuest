<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#00FFFF">

    <!-- Title: Meet the Developers -->
    <TextView
        android:id="@+id/tv_developers_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meet the Developers"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/black"/>

    <!-- Scrollable Developer List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Developer 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/img_dev1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/clint"
                    android:layout_marginEnd="8dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_dev1_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Clint Pacana"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:id="@+id/tv_dev1_bio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Login, Logout, and Profile Designer"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Developer 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/img_dev2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/yesiam"
                    android:layout_marginEnd="8dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_dev2_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Arnnon Zevv Pangan"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:id="@+id/tv_dev2_bio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Landing, Settings, and Developer Designer"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Team Vision & Fun Facts -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@android:color/white"
        android:elevation="4dp">

        <TextView
            android:id="@+id/tv_team_vision"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸŽ¯ Team Vision: Innovating experiences through creativity and passion."
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/tv_fun_facts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ¤£ Fun Facts:\n- Clint once wrote code that crashed an emulator... in two seconds!\n- Arnnon prefers dark mode so much, he once themed his entire OS black!"
            android:textSize="14sp"
            android:textColor="@android:color/black"/>
    </LinearLayout>

</LinearLayout>
